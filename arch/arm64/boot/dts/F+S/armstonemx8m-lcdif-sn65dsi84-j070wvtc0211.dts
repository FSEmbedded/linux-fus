#define CONFIG_ARMSTONEMX8M_LVDS_3_3_V
#define CONFIG_ARMSTONEMX8M_INVERTED_XY

#include "armstonemx8m.dts"

/ {
	display-subsystem {
		status = "disabled";
	};
};

&dcss {
	status = "disabled";
};

&hdmi {
	status = "disabled";
};

&lcdif {
	status = "okay";

	/* max-res = <4096>, <4096>; */

	port@0 {
		lcdif_out: endpoint {
			remote-endpoint = <&mipi_dsi_in>;
		};
	};
};

&mipi_dsi_phy {
	status = "okay";
};

&mipi_dsi {
	status = "okay";
	as_bridge;
	/* Note:
	*  HS and VS polarity to HIGH.
	*/
	sync-pol = <1>;
	pwr-delay = <10>;
	best-match;
	port@1 {
		mipi_dsi_in: endpoint {
			remote-endpoint = <&lcdif_out>;
		};
	};

};

&mipi_dsi_bridge {
	status = "okay";

	panel@0 {
		reg = <0>;
		compatible = "fs,j070wvtc0211-dsi"; /* one of panel-simple's
		match strings */

		power-supply = <&reg_vlcd>;
		enable-gpios = <&gpio4 7 GPIO_ACTIVE_HIGH>;
		backlight = <&backlight_gpio>;

		dsi,flags = <0xB>; /* MIPI_DSI_MODE_VIDEO MIPI_DSI_MODE_VIDEO_BURST MIPI_DSI_MODE_VIDEO_AUTO_VERT */
		dsi,format = <0x0>; /* MIPI_DSI_FMT_RGB888 */
		dsi,lanes = <4>;
		bus-flags = <1>;
		refresh-rate = <60>;
                rotate = <0>;

		panel-width-mm  = <154>;
		panel-height-mm = <85>;
		
		display-timings {
			native-mode = <&timing0>;

			timing0: jd_j070wvtc0211 {
				clock-frequency = <33000000>;
				hactive = <800>;
				vactive = <480>;
				hfront-porch = <210>;
				hback-porch = <45>;
				hsync-len = <1>;
				vfront-porch = <25>;
				vback-porch = <19>;
				vsync-len = <1>;
				de-active = <1>;
				vsync-active = <0>;
				hsync-active = <0>;
			};
		};

		port {
			panel1_in: endpoint {
				remote-endpoint = <&mipi_dsi_bridge_out>;
			};
		};
	};

	port@1 {
		mipi_dsi_bridge_out: endpoint {
			remote-endpoint = <&panel1_in>;
		};
	};
};

&i2c1 {
	/* mipi to lvds controller  */
	dsi_lvds_bridge: sn65dsi84@2c {
		reg = <0x2c>;
		status = "okay";
		compatible = "ti,sn65dsi84";
		#gpio-cells = <2>;

		sn65dsi84,addresses = <
		0x09 0x0A 0x0B 0x0D
		0x10 0x11 0x12 0x13
                0x18 0x19 0x1A 0x1B
                0x20 0x21 0x22 0x23
                0x24 0x25 0x26 0x27
                0x28 0x29 0x2A 0x2B
                0x2C 0x2D 0x2E 0x2F
                0x30 0x31 0x32 0x33
                0x34 0x35 0x36 0x37
                0x38 0x39 0x3A 0x3B
                0x3C 0x3D 0x3E
                0x0D>;

		sn65dsi84,values = <
		/* reset and clock registers */
		0x00 0x01 0x10 0x00
                /* DSI registers */
		0x26 0x00 0x13 0x00
		/* LVDS registers */
                0x78 0x00 0x03 0x00
                /* video registers */
                /* cha-al-len-l, cha-al-len-h */
                0x20 0x03 0x00 0x00
                /* cha-v-ds-l, cha-v-ds-h */
                0x00 0x00 0x00 0x00
                /* cha-sdl, cha-sdh*/
                0x21 0x00 0x00 0x00
                /* cha-hs-pwl, cha-hs-pwh */
                0x01 0x00 0x00 0x00
                /* cha-vs-pwl, cha-vs-pwh */
                0x01 0x00 0x00 0x00
                /*cha-hbp, cha-vbp */
                0x2d 0x00 0x00 0x00
                /* cha-hfp, cha-vfp*/
                0x00 0x00 0x00 0x00
                0x00 0x00 0x00
                0x01>;
	};
};

&i2c2 {
	/* touch I2C */
	focaltech@38 {
		compatible = "focaltech,fts";
		reg = <0x38>;

		interrupt-parent = <&gpio4>;
		interrupts = <31 IRQ_TYPE_EDGE_FALLING>;
		focaltech,irq-gpio = <&gpio4 31 IRQ_TYPE_EDGE_FALLING>;
		
		#ifdef CONFIG_ARMSTONEMX8M_INVERTED_XY
		focaltech,touchscreen-inverted-x;
		focaltech,touchscreen-inverted-y;
		#endif
		
		focaltech,reset-gpio = <&gpio5 0 GPIO_ACTIVE_LOW>;
		focaltech,num-max-touches = <10>;
		focaltech,display-coords = <0 0 800 480>;
	};
};

