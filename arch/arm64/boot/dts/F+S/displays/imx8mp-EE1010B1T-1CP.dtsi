/ {
	lvds_panel {
		compatible = "panel-lvds";
		backlight = <&backlight_ldb>;
		/* MIPI_RST from board */
		//enable-gpios = <&IMX8MP_MIPI_RESET_GPIO_BANK IMX8MP_MIPI_RESET_GPIO_NUM GPIO_ACTIVE_HIGH>;
		/* Mounting option for MIPI_RST on pca9634 (ADP-LVDS2LVDS2) */
		enable-gpios = <&gpio_adp 3 GPIO_ACTIVE_HIGH>;
		data-mapping = "vesa-24";
		label = "EE1010B1T-1CP";
                width-mm = <223>;
                height-mm = <125>;
		status = "okay";

		panel-timing {
			clock-frequency = <49500000>;
			hactive = <1024>;
			vactive = <600>;
			hback-porch = <160>;
			hfront-porch = <76>;
			hsync-len = <140>;
			vback-porch = <23>;
			vfront-porch = <107>;
			vsync-len = <20>;
			pixelclk-active = <0>;
			de-active = <1>;
		};

		port {
			panel_lvds_in: endpoint {
				remote-endpoint = <&lvds_out>;
			};
		};
	};
};

&backlight_ldb {
	pwms = <&gpio_adp 1 5263157 1>;
	brightness-levels = <0 1 5 10 18 28 41 56
				 73 92 113 137 163 192 222 255>;
	default-brightness-level = <14>;
};

&reg_ldb_bl{
	gpio = <&gpio_adp 0 GPIO_ACTIVE_HIGH>;
};

/* LVDS */
&lcdif2 {
	status = "okay";
};

&ldb_phy {
	status = "okay";
};

&ldb {
	status = "okay";
	lvds-channel@IMX8MP_LVDS_CHANNEL {
		fsl,data-mapping = "spwg";
		fsl,data-width = <24>;
		status = "okay";

		port@1 {
			reg = <1>;
			lvds_out: endpoint {
				remote-endpoint = <&panel_lvds_in>;
			};
		};
	};
};

&IMX8MP_TOUCH_I2C {
	clock-frequency = <400000>;
	gpio_adp: pca9634@61 {
			compatible = "nxp,pca9634";
			reg = <0x61>;
			vdd-supply = <&reg_vlcd>;
			#address-cells = <1>;
			#size-cells = <0>;
			#pwm-cells = <3>;
			#gpio-cells = <2>;
			led@0 {
				reg = <0>;
				label = "BL_ON";
				type = "GPIO";
				default-on;	        /* or: keep-value */
				active-high;
			};
			led@1 {
				reg = <1>;
				label = "BL_PWM";
				type = "PWM";
				default-on;             /* or: keep-value */
				active-low;
			};
			led@2 {
				reg = <2>;
				label = "2-unused";
				type = "LED";
				active-low;
			};
			led@3 {
				reg = <3>;
				label = "MIPI_RST";
				type = "GPIO";
				active-high;
			};
			led@4 {
				reg = <4>;
				label = "4-unused";
				type = "LED";
				active-low;
			};
			led@5 {
				reg = <5>;
				label = "I2C_RST";
				type = "GPIO";
				active-high;
				default-on;     /* or: keep-value */
			};
			led@6 {
				reg = <6>;
				label = "6-unused";
				type = "LED";
				active-low;
			};
			led@7 {
				reg = <7>;
				label = "TOUCH_ON";
				type = "GPIO";
				active-high;
				default-on;
			};
		};
        /* GOODIX PCAP touch on Touch-Connector (I2C) */
        touch: gt928@14 {
                compatible = "goodix,gt928";
                reg = <0x14>;
                //vdd-supply = <&reg_vlcd>;
                touchscreen-inverted-x;
                touchscreen-inverted-y;
                interrupt-parent = <&IMX8MP_TOUCH_INTERRUPT_GPIO_BANK>;
                interrupts = <IMX8MP_TOUCH_INTERRUPT_GPIO_NUM IRQ_TYPE_EDGE_RISING>;
                irq-gpios = <&IMX8MP_TOUCH_INTERRUPT_GPIO_BANK IMX8MP_TOUCH_INTERRUPT_GPIO_NUM GPIO_ACTIVE_HIGH>;
                reset-gpios = <&gpio_adp 5 GPIO_ACTIVE_HIGH>;
        };
};
