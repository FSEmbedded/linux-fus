&dsi {
	status = "okay";

	panel@0 {
		compatible = "eagleeyetech,ee0350et-2";
		reg = <0>;
		reset-gpios = <&gpioe 3 GPIO_ACTIVE_LOW>;
		vci-supply = <&reg_vlcd>;
		status = "okay";
	};
};

