/* touch reset */
#define CONFIG_IMX93_TOUCH_RESET

/* lvds panel can use optional parameter like
 * power-supply, reset-gpios and so one. These parameters
 * can be different and are specific for the board type.
 */
/* use power_supply parameter */
//#define CONFIG_IMX93_LVDS_PANEL_POWER_SUPPLY
/* use reset_gpios parameter */
#define CONFIG_IMX93_LVDS_PANEL_RESET_GPIOS


#define IMX93_TOUCH_INTERRUPT_GPIO_NUM OSM_GPIO_A_3_PIN

#ifdef CONFIG_IMX93_TOUCH_RESET
#define IMX93_TOUCH_RESET_GPIO_BANK gpio_adp
#define IMX93_TOUCH_RESET_GPIO_NUM  5
#endif

#ifdef CONFIG_IMX93_LVDS_PANEL_POWER_SUPPLY
#error configure MX93_LVDS_PANEL_POWER_SUPPLY define
#endif

#ifdef CONFIG_IMX93_LVDS_PANEL_RESET_GPIOS
#define IMX93_LVDS_PANEL_RESET_GPIO_BANK gpio_adp
#define IMX93_LVDS_PANEL_RESET_GPIO_NUM 3
#endif


#include "fs-osm-sf-mx93-adp-osm-bb.dts"

reg_bl_on: &reg_disp_bl {};
reg_vlcd: &reg_disp_vdd_en {};
IMX93_TOUCH_I2C: &osm_i2c_cam {};
IMX93_TOUCH_INTERRUPT_GPIO_BANK: &osm_gpio_a25{};

&IMX93_TOUCH_I2C {
    /* use board type specific nodes */
    gpio_adp: pca9634@61 {
		compatible = "nxp,pca9634";
		reg = <0x61>;
		vdd-supply = <&reg_vlcd>;
		#address-cells = <1>;
		#size-cells = <0>;
		#pwm-cells = <3>;
		#gpio-cells = <2>;
		led@0 {
			reg = <0>;
			label = "BL_ON";
			type = "GPIO";
			default-on;		/* or: keep-value */
			active-high;
		};
		led@1 {
			reg = <1>;
			label = "BL_PWM";
			type = "PWM";
			default-on;	     /* or: keep-value */
			active-low;
		};
		led@2 {
			reg = <2>;
			label = "2-unused";
			type = "LED";
			active-low;
		};
		led@3 {
			reg = <3>;
			label = "MIPI_RST";
			type = "GPIO";
			active-low;
			default-on;	     /* or: keep-value */
		};
		led@4 {
			reg = <4>;
			label = "4-unused";
			type = "LED";
			active-low;
		};
		led@5 {
			reg = <5>;
			label = "I2C_RST";
			type = "GPIO";
			active-high;
			default-on;     /* or: keep-value */
		};
		led@6 {
			reg = <6>;
			label = "6-unused";
			type = "LED";
			active-low;
		};
		led@7 {
			reg = <7>;
			label = "TOUCH_ON";
			type = "GPIO";
			active-high;
			default-on;
		};
	};
};

#include "displays/imx93-BT070L1060CS0I1AD-A.dtsi"