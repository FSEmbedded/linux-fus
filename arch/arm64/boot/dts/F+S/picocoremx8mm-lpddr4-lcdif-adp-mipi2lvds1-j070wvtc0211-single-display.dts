                rotate = <0>;
                bus-format = <0x100a>;
		panel-width-mm = <154>;
		panel-height-mm = <85>;
		display-timings {
			native-mode = <&timing0>;
			timing0: jd_j070wvtc0211 {
				clock-frequency = <33300000>;
				hactive = <800>;
				vactive = <480>;
				hback-porch = <10>;
				hfront-porch = <37>;
				hsync-len = <128>;
				vback-porch = <23>;
				vfront-porch = <11>;
				vsync-len = <1>;
				pixelclk-active = <0>;
				de-active = <1>;
				vsync-active = <0>;
				hsync-active = <0>;
			};
		};
