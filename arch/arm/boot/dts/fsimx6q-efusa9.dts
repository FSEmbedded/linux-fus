/ {
	model = "F&S i.MX6 Quad efusA9 module";
	compatible = "fus,imx6q-efusa9", "fsl,imx6q";

	/* -------------------- BOARD INFO -------------------- */
	bdinfo {
		compatible = "bdinfo";
		board_name = "efusa9";
		ecc_strength = "8";
	};
};

&dma_apbh {
	/* Switch to F&S implementation of APBH DMA driver for GPMI (NAND) */
	compatible = "fus,imx6q-dma-apbh", "fus,imx28-dma-apbh";
};

#ifdef CONFIG_EFUSA9_LVDS
&ldb {
	ipu_id = <0>;
	sec_ipu_id = <0>;
#ifdef CONFIG_EFUSA9_LCD
	disp_id = <1>;
	sec_disp_id = <0>;
	lvds-channel@0 {
		crtc = "ipu1-di1";
		status = "okay";
	};
#else
	disp_id = <0>;
	sec_disp_id = <1>;
	lvds-channel@0 {
		crtc = "ipu1-di0";
		status = "okay";
	};
#endif
};
#endif

